<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomSheetDialog.Amoled" parent="@style/BottomSheetDialog.Dark">
        <item name="bottomSheetStyle">@style/BottomSheet.Amoled</item>
        <item name="android:navigationBarColor">@color/amoled_theme_card_background</item>
    </style>
    <style name="BottomSheetDialog.Dark" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet.Dark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/dark_theme_card_background</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    <style name="BottomSheetDialog.Light" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet.Light</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/light_theme_card_background</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>